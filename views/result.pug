
extends layout.pug




block nav
  nav.navbar.navbar-default
    .container-fluid
      .navbar-header
        a.navbar-brand(href='/')
          p S.P.A 🐱 🐶 🐰 🐦
      a.btn.btn-danger.navbar-right.navbar-btn(href='/addanimal') Faire un Signalement


block main
  .col-md-6.col-md-offset-3.well
    form.form-horizontal(action='/finish/'+animaux._id, method='post')
      // Form Name
      legend Résultat de l'intervention
      // Select Basic
      .form-group
        label.col-md-4.control-label(for='statuts') Statuts
        .col-md-4
          select#statuts.form-control(name='statuts')
            option(value='Sauvé') Sauvé
            option(value='Echec') Echec
            option(value='Annulé') Annulé
      // Button
      .form-group
        label.col-md-4.control-label(for='submit') Resultat
        .col-md-6
          p
            button#submit.btn.btn-info( type='submit', name='submit') Envoyer
